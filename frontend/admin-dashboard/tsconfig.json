{
  "extends": "../tsconfig.base.json",

  "compilerOptions": {
    "composite": true,
    "noEmit": true,

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "@auth/*": ["auth/*"],
      "@components/*": ["components/*"],
      "@shared-ui/*": ["../shared-ui/*"]
    },

    "plugins": [{ "name": "next" }]
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],

  "exclude": ["node_modules"]
}
